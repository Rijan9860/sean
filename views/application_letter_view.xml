<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="application_letter_form_view" model="ir.ui.view">
        <field name="name">Application Letter Form View</field>
        <field name="model">application.letter</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <h2>आवद्ध संघसंस्था कम्पनी फर्म को विवरण</h2>
                    <group>
                        <group>
                            <group>
                                <field name="company_name" />
                            </group>
                        </group>
                        <seperator/>
                        <group>
                            <group>
                                <field name="area" />
                            </group>
                             <group>
                                <field name="province" />
                            </group>
                        </group>
                        <group>
                            <group>
                                <field name="zone" />
                            </group>
                        </group>
                        <group>
                            <group>
                                <field name="local_level_type" />
                            </group>
                            <group>
                                <field name="local_level_type_name" string="" />
                            </group>
                        </group>
                        <seperator/>
                        <group>
                            <group>
                                <field name="contact_number" />
                            </group>
                            <group>
                                <field name="mobile_number" />
                            </group>
                        </group>
                    </group>
                    <h2>नेपाल सरकारको सम्वन्धित सरोकारवालासंग दर्ता भए/नभएको विवरण</h2>
                    <group>
                        <group>
                           <field name="org_reg_certificate" />
                            <field name="seed_liscense" />
                            <field name="internal_revenue_registration" />
                            <field name="citizenship_certificate" />
                            <field name="member_of_sean" />
                        </group>
                    </group>
                    <h2>कार्यालय प्रयोजनको लागि मात्र</h2>
                    <h3>यस संघमा आवद्ध  भएको विवरण</h3>
                     <group>
                        <group>
                            <field name="membership_date" />
                            <field name="membership_renewal_date" />
                            <field name="membership_renewed_since" />
                            <field name="organization_firm_id" />
                            <field name="membership_certificate_isssued" />
                        </group>
                    </group>
                </sheet>
            </form>
        </field>
    </record>
    <record id="application_letter_tree_view" model="ir.ui.view">
        <field name="name">Application Letter Tree View</field>
        <field name="model">application.letter</field>
        <field name="arch" type="xml">
            <tree>
                <field name="company_name" />
                <field name="area" />
                <field name="local_level_type" />
            </tree>
        </field>
    </record>
    <record id="action_application_letter" model="ir.actions.act_window">
        <field name="name">आवदत्ता पत्र</field>
        <field name="res_model">application.letter</field>
        <field name="view_mode">tree,form</field>
        <field name="view_id" ref="application_letter_tree_view"></field>
    </record>
    <menuitem id="menu_application_letter" name="आवदत्ता पत्र" sequence="10" parent="menu_root" action="action_application_letter"/>
</odoo>